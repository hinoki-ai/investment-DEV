# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

[*.{py, pyi}]
indent_size = 4
max_line_length = 88

[*.{md, mdx}]
trim_trailing_whitespace = false
max_line_length = 80

[Makefile]
indent_style = tab

[*.{yml, yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.sh]
indent_size = 2
end_of_line = lf

[*.kt]
indent_size = 4
max_line_length = 120

[*.gradle]
indent_size = 4

[*.sql]
indent_size = 2

[*.dockerfile]
indent_size = 2
