{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "npm install",
  "routes": [
    {
      "src": "/releases/(.*\\.apk)",
      "dest": "/releases/$1",
      "headers": {
        "Content-Type": "application/vnd.android.package-archive",
        "Content-Disposition": "attachment; filename=nexus-latest-release.apk"
      }
    },
    {
      "src": "/releases/(.*)",
      "dest": "/releases/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}