#!/usr/bin/env bash
# ═══════════════════════════════════════════════════════════════════════════════
# CLOUDFLARE PAGES DEPLOYER v1.0
# Simple, reliable deployment to Cloudflare Pages
# 
# Usage:
#   ./deploy              # Deploy to production
#   ./deploy preview      # Deploy to preview branch
# ═══════════════════════════════════════════════════════════════════════════════

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# Config
PROJECT_NAME="investment-aramac"
DOMAIN="inv.aramac.dev"
WEB_DIR="/home/hinoki/HinokiDEV/Investments/prism/web"
BRANCH="${1:-production}"

echo -e "${BLUE}╔═══════════════════════════════════════════════════════════════╗${NC}"
echo -e "${BLUE}║${NC}     CLOUDFLARE PAGES DEPLOYER                                  ${BLUE}║${NC}"
echo -e "${BLUE}║${NC}     Target: ${GREEN}${DOMAIN}${NC}                                    ${BLUE}║${NC}"
echo -e "${BLUE}╚═══════════════════════════════════════════════════════════════╝${NC}"
echo ""

# Check wrangler
if ! command -v wrangler &>/dev/null; then
    echo -e "${YELLOW}Installing wrangler...${NC}"
    npm install -g wrangler
fi

# Check login
if ! wrangler whoami &>/dev/null 2>&1; then
    echo -e "${RED}Not logged in to Cloudflare${NC}"
    echo "Run: wrangler login"
    exit 1
fi

# Build
echo -e "${BLUE}→ Building...${NC}"
cd "$WEB_DIR"
npm run build

# Deploy
echo -e "${BLUE}→ Deploying to Cloudflare Pages (${BRANCH} branch)...${NC}"
wrangler pages deploy dist --project-name="$PROJECT_NAME" --branch="$BRANCH"

# Verify
echo -e "${BLUE}→ Verifying...${NC}"
if curl -s -o /dev/null -w "%{http_code}" "https://${DOMAIN}" | grep -q "200"; then
    echo -e "${GREEN}✓ Deployment successful!${NC}"
    echo -e "${GREEN}→ https://${DOMAIN}${NC}"
else
    echo -e "${YELLOW}⚠ Deployed but verification failed${NC}"
fi
