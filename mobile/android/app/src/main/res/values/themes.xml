<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 
        PRISM Warm Dark Theme
        Nothing Phone aesthetic with warm cream accents
    -->
    <style name="Theme.InvestmentPortal" parent="android:Theme.Material.NoActionBar">
        <!-- System bars -->
        <item name="android:statusBarColor">@color/void</item>
        <item name="android:navigationBarColor">@color/void</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Enable edge-to-edge -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        
        <!-- Disable default activity transitions for custom control -->
        <item name="android:windowActivityTransitions">false</item>
    </style>
    
    <!-- 
        Splash theme for cold start
        Shows immediately while app loads
    -->
    <style name="Theme.InvestmentPortal.Splash" parent="Theme.InvestmentPortal">
        <item name="android:windowBackground">@color/void</item>
    </style>
</resources>
